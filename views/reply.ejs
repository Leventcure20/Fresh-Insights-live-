<%- include('partials/navbar.ejs') %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Comments</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <style>
        /* Styling for the post container */
        .post-container {
            width: 100%;
            max-width: 600px;
            margin: 20px auto;
            border: 2px solid #007bff;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            padding: 20px;
        }

        .post-title {
            font-size: 1.8rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .post-content {
            font-size: 1rem;
            color: #555;
            line-height: 1.5;
            margin-bottom: 20px;
        }

        /* Styling for the comment section */
        .comment-section {
            margin-top: 20px;
            border-top: 2px solid #ddd;
            padding-top: 20px;
        }

        .comment-heading {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .comment-form textarea {
            width: 100%;
            height: 100px;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .comment-form button {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .comment-form button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Post Section -->
        <div class="post-container">
            <h2 style="text-align: center;" class="post-title">Current Comment</h2>
            <p style="text-align: center;" post-content"><%= comment.content %></p>
        </div>

        <!-- Comment Section -->
        <div class="comment-section">
            <h3 class="comment-heading">Add a Comment</h3>
            <form class="comment-form" action="/comments/<%= comment.blog_id %>" method="POST">
                <textarea name="comment" placeholder="Write your comment here..."></textarea>
                <button type="submit">Post Comment</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
