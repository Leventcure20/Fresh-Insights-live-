<%- include('partials/navbar.ejs') %> 

<div class="container mt-5">
  <div class="card mx-auto" style="width: 50%; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
    <div class="card-body">
      <h3 class="card-title text-center mb-4">Account Details</h3>

      <% if (locals.error) { %>
        <p><%= error %> </p>
      <% } else { %>
        <div class="mb-4">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" class="form-control" value="<%= data.email %>" disabled>
          </div>
    
          <div class="mb-4">
            <label for="password" class="form-label">password</label>
            <input type="password" id="password" class="form-control" value="YourPasswordHere" disabled>
          </div>
          
          <form action="/changePassword" method="GET">
            <div class="d-flex justify-content-end">
                <button class="btn btn-primary">Change Password</button>
              </div>

          </form>
        
      <% } %>
    </div>
  </div>
</div>
